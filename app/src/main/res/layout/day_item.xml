<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade_1">

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="Day: "
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_day"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Period 1: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Period 2: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_p3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Period 3: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_p4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Period 4: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_p5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Period 5: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_p6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Period 6: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_p7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Period 7: "
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>