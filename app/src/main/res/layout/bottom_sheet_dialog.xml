<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlb_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade_1">

    <TextView
        android:id="@+id/txt_subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:text="Subject Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_present_classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_subject_name"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Present Classes"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_absent_classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_present_classes"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:text="Absent Classes"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_total_classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_absent_classes"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:text="Total Classes"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_current_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_total_classes"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Current Status"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/txt_current_status">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit Subject"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/btn_edit_subject"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Status"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/btn_view_status"/>
    </LinearLayout>


</RelativeLayout>